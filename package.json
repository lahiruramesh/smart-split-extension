{
  "name": "smart-split-runner",
  "displayName": "SMART-Split Runner",
  "description": "Microservice decomposition tool with sidebar, commands, and status indicators",
  "version": "0.1.0",
  "publisher": "smart-split",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "microservices",
    "decomposition",
    "monolith",
    "architecture"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activityBar": [
        {
          "id": "smart-split",
          "title": "SMART-Split",
          "icon": "$(layers)"
        }
      ]
    },
    "views": {
      "smart-split": [
        {
          "id": "smartSplitCommands",
          "name": "Commands",
          "type": "webview"
        },
        {
          "id": "smartSplitStatus",
          "name": "Status",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "smart-split-runner.showMenu",
        "title": "SMART-Split: Show Menu",
        "icon": "$(list-selection)"
      },
      {
        "command": "smart-split-runner.runFull",
        "title": "SMART-Split: Run Full Pipeline",
        "icon": "$(rocket)",
        "shortTitle": "Full Pipeline"
      },
      {
        "command": "smart-split-runner.runValidation",
        "title": "SMART-Split: Run Validation",
        "icon": "$(check-all)",
        "shortTitle": "Validation"
      },
      {
        "command": "smart-split-runner.runQuality",
        "title": "SMART-Split: Run Quality-Driven Decomposition",
        "icon": "$(sparkle)",
        "shortTitle": "Quality"
      },
      {
        "command": "smart-split-runner.runCustom",
        "title": "SMART-Split: Run with Custom Domain Prompts",
        "icon": "$(edit)",
        "shortTitle": "Custom"
      },
      {
        "command": "smart-split-runner.runAnalysis",
        "title": "SMART-Split: Run Analysis & Generate Charts",
        "icon": "$(graph)",
        "shortTitle": "Analysis"
      },
      {
        "command": "smart-split-runner.cleanup",
        "title": "SMART-Split: Cleanup Database",
        "icon": "$(trash)",
        "shortTitle": "Cleanup"
      },
      {
        "command": "smart-split-runner.runSummary",
        "title": "SMART-Split: Generate Summary Report",
        "icon": "$(file-text)",
        "shortTitle": "Summary"
      },
      {
        "command": "smart-split-runner.openOutputFolder",
        "title": "SMART-Split: Open Analysis Output Folder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "smart-split-runner.refreshStatus",
        "title": "SMART-Split: Refresh Status",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "commandPalette": [
        { "command": "smart-split-runner.showMenu" },
        { "command": "smart-split-runner.runFull" },
        { "command": "smart-split-runner.runValidation" },
        { "command": "smart-split-runner.runQuality" },
        { "command": "smart-split-runner.runCustom" },
        { "command": "smart-split-runner.runAnalysis" },
        { "command": "smart-split-runner.cleanup" },
        { "command": "smart-split-runner.runSummary" },
        { "command": "smart-split-runner.openOutputFolder" },
        { "command": "smart-split-runner.refreshStatus" }
      ],
      "view/title": [
        {
          "command": "smart-split-runner.refreshStatus",
          "when": "view == smartSplitStatus",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "smart-split-runner.showMenu",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s"
      },
      {
        "command": "smart-split-runner.runFull",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "!editorFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "package-extension": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
